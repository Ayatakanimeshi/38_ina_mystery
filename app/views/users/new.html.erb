<div class="container mt-48 mx-31">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 text-black-500 text-center">
      <h1>ユーザー登録</h1>
        <%= form_with(model: @user, local: true) do |form| %>
            <div class="form-group ">
                <%= form.label :name %>
                <%= form.text_field :name, class: "form-control border border-black my-2" %>
            </div>
            <div class="form-group">
                <%= form.label :email %>
                <%= form.email_field :email, class: "form-control border border-black my-2" %>
            </div>
            <div class="form-group">
                <%= form.label :password %>
                <%= form.password_field :password, class: "form-control border border-black my-2" %>
            </div>
            <div class="form-group">
                <%= form.label :password_confirmation %>
                <%= form.password_field :password_confirmation, class: "form-control border border-black my-2" %>
            </div>

            <div class="actions">
                <%= form.submit "登録", class: "btn btn-primary bg-indigo-700 font-semibold text-white my-2 py-2 px-4 rounded hover:bg-indigo-500 focus:outline-none focus:shadow-outline" %>
            </div>
        <% end %>
    </div>
  </div>
</div>